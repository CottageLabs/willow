        "collectionIdentifier": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/identifier"
          }
        },
        "collectionRelatedIdentifier": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/identifier"
          }
        },
        "collectionPersonRole": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/personRole"
          }
        },
        "collectionOrganisationRole": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/organisationRole"
          }
        }
      },
      "required": [
        "collectionUuid",
        "collectionName",
        "collectionDescription",
        "collectionRights"
      ],
      "additionalProperties": false
    },
    "organisationRole": {
      "type": "object",
      "properties": {
        "organisation": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/material_asset.json/#/definitions/organisation"
        },
        "role": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        }
      },
      "required": [
        "organisation",
        "role"
      ],
      "additionalProperties": false
    },
    "personRole": {
      "type": "object",
      "properties": {
        "person": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/material_asset.json/#/definitions/person"
        },
        "role": {
          "type": "integer",
          "minimum": 1,
          "maximum": 22
        }
      },
      "required": [
        "person",
        "role"
      ],
      "additionalProperties": false
    },
    "date": {
      "type": "object",
      "properties": {
        "dateValue": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/timestamp"
        },
        "dateType": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        }
      },
      "required": [
        "dateValue",
        "dateType"
      ],
      "additionalProperties": false
    }
  }
}
