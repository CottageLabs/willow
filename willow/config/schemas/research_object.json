{
  "id": "https://www.jisc.ac.uk/rdss/schema/research_object.json/#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "object": {
      "type": "object",
      "properties": {
        "objectUuid": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/uuid"
        },
        "objectTitle": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/nonEmptyString"
        },
        "objectPersonRole": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/personRole"
          },
          "minItems": 1
        },
        "objectDescription": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/nonEmptyString"
        },
        "objectRights": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/rights"
          },
          "minItems": 1
        },
        "objectDate": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/date"
          },
          "minItems": 1
        },
        "objectKeywords": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/nonEmptyString"
          }
        },
        "objectCategory": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/nonEmptyString"
          }
        },
        "objectResourceType": {
          "type": "integer",
          "minimum": 1,
          "maximum": 28
        },
        "objectValue": {
          "type": "integer",
          "minimum": 1,
          "maximum": 3
        },
        "objectIdentifier": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/identifier"
          },
          "minItems": 1
        },
        "objectRelatedIdentifier": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/identifier"
          }
        },
        "objectOrganisationRole": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/organisationRole"
          },
          "minItems": 1
        },
        "objectPreservationEvent": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "https://www.jisc.ac.uk/rdss/schema/intellectual_asset.json/#/definitions/preservationEvent"
          }
        },
        "objectFile": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "https://www.jisc.ac.uk/rdss/schema/intellectual_asset.json/#/definitions/file"
          }
        }
      },
      "required": [
        "objectUuid",
        "objectTitle",
        "objectPersonRole",
        "objectDescription",
        "objectRights",
        "objectDate",
        "objectResourceType",
        "objectValue",
        "objectIdentifier",
        "objectOrganisationRole"
      ],
      "additionalProperties": false
    },
    "identifier": {
      "type": "object",
      "properties": {
        "identifierValue": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/nonEmptyString"
        },
        "identifierType": {
          "type": "integer",
          "minimum": 1,
          "maximum": 18
        },
        "relationType": {
          "type": "integer",
          "minimum": 1,
          "maximum": 37
        }
      },
      "required": [
        "identifierValue",
        "identifierType"
      ],
      "additionalProperties": false
    },
    "rights": {
      "type": "object",
      "properties": {
        "rightsStatement": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/nonEmptyString"
