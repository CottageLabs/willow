        "rightsHolder": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/nonEmptyString"
          },
          "minItems": 1
        },
        "licence": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/licence"
          },
          "minItems": 1
        },
        "access": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/access"
          },
          "minItems": 1
        }
      },
      "required": [
        "rightsStatement",
        "rightsHolder",
        "licence",
        "access"
      ],
      "additionalProperties": false
    },
    "licence": {
      "type": "object",
      "properties": {
        "licenceName": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/nonEmptyString"
        },
        "licenceIdentifier": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/nonEmptyString"
        }
      },
      "required": [
        "licenceName",
        "licenceIdentifier"
      ],
      "additionalProperties": false
    },
    "access": {
      "type": "object",
      "properties": {
        "accessType": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5
        },
        "accessStatement": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/nonEmptyString"
        }
      },
      "required": [
        "accessType"
      ],
      "additionalProperties": false
    },
    "collection": {
      "type": "object",
      "properties": {
        "collectionUuid": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/uuid"
        },
        "collectionName": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/nonEmptyString"
        },
        "collectionObject": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/object"
          }
        },
        "collectionKeywords": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/nonEmptyString"
          }
        },
        "collectionCategory": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/nonEmptyString"
          }
